{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES5",
    "outDir": "lib",
    "downlevelIteration": true,
    "declaration": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    }
  },
  "include": ["src/**/*"]
}