{
  "compilerOptions": {
    "module": "ES6",
    "target": "ES5",
    "outDir": "lib",
    "downlevelIteration": true,
    "declaration": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"]
}