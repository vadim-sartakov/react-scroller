{
  "name": "@vadim-sartakov/react-scroller",
  "version": "1.0.0",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": "https://github.com/vadim-sartakov/react-scroller",
  "homepage": "https://github.com/vadim-sartakov/react-scroller#readme",
  "author": "Vadim Sartakov",
  "keywords": [
    "react",
    "scroll",
    "list",
    "grid",
    "virtualized"
  ],
  "files": [
    "/lib/**/*"
  ],
  "license": "MIT",
  "scripts": {
    "lint": "eslint src/",
    "build": "rm -rf lib && mkdir lib && cross-env NODE_ENV=production babel src --out-dir lib --ignore src/**/*.stories.js,src/**/*.test.js && copyfiles -u 1 src/**/*.d.ts lib",
    "test": "jest",
    "storybook": "start-storybook -p 9009",
    "build-storybook": "rm -rf docs/storybook && build-storybook -o docs/storybook",
    "build-docs": "rm -rf docs/docs && typedoc --includeDeclarations --excludeExternals --ignoreCompilerErrors --out docs/docs --readme README.md src/"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "peerDependencies": {
    "react": "^16.14.0",
    "react-dom": "^16.14.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.10",
    "@babel/core": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@babel/preset-react": "^7.12.13",
    "@storybook/addon-actions": "^6.1.21",
    "@storybook/addon-essentials": "^6.1.21",
    "@storybook/addon-links": "^6.1.21",
    "@storybook/react": "^6.1.21",
    "@types/react": "^16.9.23",
    "babel-jest": "^26.6.3",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.22.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^26.6.3",
    "pre-commit": "^1.2.2",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "typedoc": "^0.20.33",
    "typescript": "^4.2.3"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
